<div class="contact-section">
  <h1>Contact</h1>
  <%= form_with url: contact_path, method: :post, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email %>
    </div>
    <div class="form-group">
      <%= f.label :message, 'Message' %>
      <%= f.text_area :message, rows: 5 %>
    </div>
    <div class="form-actions">
      <%= f.submit 'Send', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
