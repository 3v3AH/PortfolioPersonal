<div class="home-section">
  <h1>Mis Proyectos Destacados</h1>
  <div class="project-grid">
    <% @projects.each do |project| %>
      <div class="project-card">
        <%= image_tag project.image_url, alt: project.title, class: 'project-thumb' if project.image_url.present? %>
        <h2><%= link_to project.title, project_path(project) %></h2>
        <p><%= truncate(project.description, length: 120) %></p>
        <div class="tags">
          <% project.tags.to_s.split(',').each do |tag| %>
            <span class="tag"><%= tag.strip %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="see-all">
    <%= link_to 'Ver todos los proyectos', projects_path, class: 'btn btn-outline-secondary' %>
  </div>
</div>
