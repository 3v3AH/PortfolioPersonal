<!-- Projects Section -->
<section id="projects" class="container py-5">
  <h1 class="section-title text-center">My Projects</h1>

  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-6 col-lg-4">
        <div class="project-card">
          <% if project.image_url.present? %>
            <img src="<%= project.image_url %>" alt="<%= project.name %>" class="project-image">
          <% end %>

          <h3 class="mt-2"><%= project.name %></h3>
          <p><%= project.description %></p>

          <% if project.tags.present? %>
            <p><strong>Tags:</strong> <%= project.tags %></p>
          <% end %>

          <div class="d-flex justify-content-between mt-3">
            <% if project.demo_url.present? %>
              <a href="<%= project.demo_url %>" class="btn btn-outline-primary btn-sm" target="_blank">Live Demo</a>
            <% end %>
            <% if project.code_url.present? %>
              <a href="<%= project.code_url %>" class="btn btn-outline-secondary btn-sm" target="_blank">Code</a>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

