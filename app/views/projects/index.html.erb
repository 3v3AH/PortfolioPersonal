<!-- app/views/projects/index.html.erb -->

<div class="container">
  <header>
    <h1>My Portfolio</h1>
    <p>Discover my work and case studies</p>
  </header>

  <div class="projects-grid">
    <% @projects.each do |project| %>
      <div class="project-card">
        <img src="<%= project.image_url %>" alt="<%= project.title %>">
        <div class="project-content">
          <h3><%= project.title %></h3>
          <p><%= project.description %></p>

          <% if project.tags.present? %>
            <div class="tags">
              <% project.tags.split(',').each do |tag| %>
                <span class="tag"><%= tag.strip %></span>
              <% end %>
            </div>
          <% end %>

          <div class="project-links">
            <% if project.demo_url.present? %>
              <a href="<%= project.demo_url %>" target="_blank">Live Demo</a>
            <% end %>
            <% if project.code_url.present? %>
              <a href="<%= project.code_url %>" target="_blank">Code</a>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
