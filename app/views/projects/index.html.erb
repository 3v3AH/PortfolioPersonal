<!-- Projects Section -->
<div class="container main-content">
  <h1 class="section-title text-center">My Projects</h1>
    <div class="container">
      <div class="row justify-content-center">
        <% @projects.each do |project| %>
          <div class="col-md-5 project-card m-2">
            <% if project.image_url.present? %>
              <img src="<%= project.image_url %>" alt="<%= project.name %>" class="project-image">
            <% end %>
            <h3><%= project.name %></h3>
            <p><%= project.description %></p>
            <% if project.tags.present? %>
              <% project.tags.split(',').each do |tag| %>
                <span class="badge bg-secondary"><%= tag.strip %></span>
              <% end %>
            <% end %>
            <div class="mt-2">
              <% if project.demo_url.present? %>
                <%= link_to 'Demo', project.demo_url, class: 'btn btn-primary btn-sm me-1', target: '_blank' %>
              <% end %>
              <% if project.code_url.present? %>
                <%= link_to 'Code', project.code_url, class: 'btn btn-outline-dark btn-sm', target: '_blank' %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

