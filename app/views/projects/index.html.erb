<!-- Projects Section -->
<div class="container main-content">
  <h1 class="section-title text-center">My Projects</h1>

  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-6 col-lg-4">
        <div class="project-card">
          <% if project.image_url.present? %>
            <img src="<%= project.image_url %>" alt="<%= project.title %>" class="project-image">
          <% end %>
          <h3><%= project.title %></h3>
          <p><%= truncate(project.description, length: 100) %></p>
          <% if project.tags.present? %>
            <div class="mb-2">
              <% project.tags.split(',').each do |tag| %>
                <span class="badge bg-secondary"><%= tag.strip %></span>
              <% end %>
            </div>
          <% end %>
          <div>
            <% if project.demo_url.present? %>
              <%= link_to "Demo", project.demo_url, target: "_blank", class: "btn btn-outline-primary btn-sm me-2" %>
            <% end %>
            <% if project.code_url.present? %>
              <%= link_to "Code", project.code_url, target: "_blank", class: "btn btn-outline-dark btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="contact-links d-flex justify-content-center gap-3 flex-wrap mt-3">
      <a href="mailto:evelynah97@gmail.com" class="btn btn-outline-dark">Email Me</a>
